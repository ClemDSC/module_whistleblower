{% extends '@MailThemes/classic/components/layout.html.twig' %}

{% block content %}
    <tr>
        <td class="box" style="border:1px solid #D6D4D4;">
            <table class="table">
                <tr>
                    <td width="10">&nbsp;</td>
                    <td>
                        <font size="2" face="{{ languageDefaultFont }}Open-sans, sans-serif" color="#555454">
                            <p style="text-transform: uppercase">{{ 'Important :'|trans({}, 'Emails.Body', locale)|raw }}</p>
                            <p>{message}</p>
                        </font>
                    </td>
                    <td width="10">&nbsp;</td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td class="box" style="border:1px solid #D6D4D4;">
            <table class="table">
                <tr>
                    <td width="10">&nbsp;</td>
                    <td>
                        <font size="2" face="{{ languageDefaultFont }}Open-sans, sans-serif" color="#555454">
                            <p style="text-transform: uppercase">{{ 'Details context :'|trans({}, 'Emails.Body', locale)|raw }}</p>
                            <ol>
                                <li>{{ 'Cart ID : '|trans({}, 'Emails.Body', locale)|raw }}{cart_id}</li>
